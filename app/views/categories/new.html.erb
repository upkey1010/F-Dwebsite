<% provide(:title, 'Add Category') %>
<h1>Add Category</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@category) do |f| %>
      <%= f.label :name%>
      <%= f.text_field :name %>

      <%= f.submit "Create Category", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>