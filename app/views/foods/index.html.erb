<h1>All Foods</h1>
<div class="btn-group">
  <button type="button" class="btn btn-default dropdown-toggle"
    data-toggle="dropdown"><%= t "food.order_by" %><span class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu">
    <li><%= link_to "ASC by name", foods_path(type: :asc_by_name) %></li>
    <li><%= link_to "ASC by price", foods_path(type: :asc_by_price) %></li>
    <li><%= link_to "DSC by name", foods_path(type: :desc_by_name) %></li>
    <li><%= link_to "DSC by price", foods_path(type: :desc_by_price) %></li>
  </ul>
</div>

<ul class="users">
  <% @foods.each do |food| %>
    <li>   
      <%= link_to food.name, food %>
    </li>
  <% end %>
</ul>